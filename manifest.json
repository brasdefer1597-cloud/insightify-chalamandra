{
  "manifest_version": 3,
  "name": "Insightify Salamander - AI Content Clarifier",
  "version": "1.0.0",
  "description": "Transform complex web content into clear insights using Chrome's built-in AI",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["content-style.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Insightify Salamander - Analyze this page"
  },
  "web_accessible_resources": [
    {
      "resources": ["demo-simulator.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
